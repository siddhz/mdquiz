<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ImageView android:id="@+id/iv1" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:src="@drawable/splash"
		android:scaleType="fitXY">
	</ImageView>
	<ImageView android:id="@+id/disk" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:src="@drawable/icon"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:layout_marginBottom="20dip"
		android:layout_marginLeft="20dip">
	</ImageView>
</RelativeLayout>
